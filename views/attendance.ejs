
  <div class="container">
    <h1>Attendance</h1>
    <div class="row">
        <div class="col">

            <!-- menampilkan pesan -->
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert"> <%= msg %> </div>
            <% } %>

            <% if (msg2.length !== 0) { %>
                <div class="alert alert-warning" role="alert"> <%= msg2 %> </div>
            <% } %>

            <% const date = new Date() %> 
            <form method="post" action="/attendance" >
                <div class="row">
                    <div class="col-md-3">
                        <input type="date" class="form-control" value=" <%=date.toISOString().slice(0,10)%>" id="tgl" name="tgl">
                    </div>
                    <div class="col-md-3">
                        <input type="date" class="form-control" value="" id="tgl" name="tgl">
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" aria-label="Default select example" name="jam_kerja">
                            <option value="lebih">Lebih dari</option>
                            <option value="kurang">Kurang dari</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control" name="jumlah_jam_kerja" >
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary d-block"><i class="bi bi-search"></i> Cari</button>
                    </div>
                </div>
            </form>

            <table class="table table-striped table-hover  mt-3">
                <thead class="table-primary">
                    <tr>
                        <th>No</th>
                        <th>Tanggal</th>
                        <th>Nama</th>
                        <th>Jam Masuk</th>
                        <th>Jam Keluar</th>
                        <th>Jam Kerja</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (cont.length == 0) { %>
                        <tr><td colspan="5"><center><b>Attendance masih kosong</b></center></td></tr>
                    <% }else{ %>  
                        <% cont.forEach( (con,index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= con.tgl.toLocaleDateString('id-ID') %> </td>
                                <td><%= con.name %> </td>
                                <td><%= con.jam_masuk %> </td>                    
                                <td><%= con.jam_keluar %> </td>                    
                                <td><%= con.jam_kerja%></td>                    
                                <!-- <td>
                                    <a href="/employee/<%= con.name %>">
                                        <span class="badge rounded-pill text-bg-success">detail</span>   
                                    </a>
                                    <a href="/employee/delete/<%= con.name %>">
                                        <span class="badge rounded-pill text-bg-danger" onclick="return confirm('yakin?');">hapus</span>   
                                    </a>
                                </td>                     -->
                            </tr>
                        <% }) %>
                    <% } %> 
                </tbody>
            </table>
               
        </div>
    </div>
</div>

